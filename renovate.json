{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "includePaths": ["packages/create-plugin/templates/common/_package.json"],
  "prHourlyLimit": 100,
  "regexManagers": [
    {
      "fileMatch": ["packages/create-plugin/templates/common/_package.json"],
      "matchStringsStrategy": "recursive",
      "matchStrings": [
        "\"devDependencies\":\\s*\\{[^}]*}",
        "\"(?<depName>.*)\"[^\"]*:\\s*\"(?<currentValue>.*)\""
      ],
      
      "packageNameTemplate": "@grafana/plugin-e2e",
      "datasourceTemplate": "npm"
    }
  ]
}
