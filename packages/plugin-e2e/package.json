    "playwright:test": "npx playwright test",
    "playwright:test:ui": "npx playwright test --ui",
    "playwright:showreport": "npx playwright show-report"
  },
  "engines": {
    "node": ">=18 <=20"
  },
  "peerDependencies": {
    "@playwright/test": "^1.41.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.3.1"
  },
  "dependencies": {
    "semver": "^7.5.4",
    "uuid": "^10.0.0",
    "yaml": "^2.3.4"
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*"
    ],
    "ext": "*",
    "events": {
      "start": "cls || clear"
    }
  }
