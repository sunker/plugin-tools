    //   "customType": "regex",
    //   "fileMatch": ["packages/create-plugin/templates/common/**/plugin.json"],
    //   "matchStrings": [
    //     "\"(?<depName>grafanaDependency)\"[^\"]*:\\s*\"(?<currentValue>.*)\""
    //   ],
    //   "datasourceTemplate": "npm"    
  ]
}
