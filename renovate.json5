{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "includePaths": ["packages/create-plugin/templates/common/**"],
  "prHourlyLimit": 101,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["_package.json"],
      "matchStrings": [
        "\"(?<depName>@grafana\/.*)\"[^\"]*:\\s*\"(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "npm"
    },
