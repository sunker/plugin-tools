{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "includePaths": ["packages/create-plugin/templates/common/**"],
  "prHourlyLimit": 101,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["_package.json"],
      "matchStrings": [
        "\"(?<depName>@grafana\/.*)\"[^\"]*:\\s*\"(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "npm"
    },
    {
      "customType": "regex",
      "fileMatch": ["plugin.json"],
      "matchStrings": [
        "\"(?<depName>grafanaDependency)\"[^\"]*:\\s*\"(?<currentValue>.*)\""
      ],
      "depNameTemplate": "@grafana/data",
      "datasourceTemplate": "npm"    
    },
    {
      "customType": "regex",
      "fileMatch": ["packages/create-plugin/templates/common/docker-compose.yaml"],
      "matchStrings": [
        "\"grafana_version:\\s\\$\\{GRAFANA_VERSION:-(?<currentValue>.*)\\}\""
      ],
      "depNameTemplate": "@grafana/data",
      "datasourceTemplate": "npm"    
    }
  ]
}
