{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "includePaths": ["packages/create-plugin/templates/common/**"],
  "prHourlyLimit": 101,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["_package.json"],
      "matchStrings": [
        "\"(?<depName>@grafana\/.*)\"[^\"]*:\\s*\"\\^(?<currentValue>.*)\""
      ],
      "datasourceTemplate": "npm"
    },
    {
      "customType": "regex",
      "fileMatch": ["^plugin.json$"],
      "matchStrings": [
        "\"grafanaDependency\":\\s*\">=(?<currentValue>.*)\""
      ],
      "depNameTemplate": "grafana/grafana-enterprise",
      "datasourceTemplate": "docker"       
    },
    {
      "customType": "regex",
      "fileMatch": ["(^|/)(?:docker-)?compose[^/]*\\.ya?ml$"],
      "matchStrings": [
        "grafana_version:\\s\\$\\{GRAFANA_VERSION:-(?<currentValue>.*)\\}"
      ],
      "depNameTemplate": "grafana/grafana-enterprise",
      "datasourceTemplate": "docker"    
    }
  ],
   "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "major"
      ],
      "groupName": "update grafana dependencies",
      "groupSlug": "all-grafana"
    }
  ]
}
